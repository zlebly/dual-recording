<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.georsoft.system.mapper.SysDataDictTypeMapper">

	<resultMap type="SysDataDictType" id="SysDictTypeResult">
		<id     property="id"     column="id"     />
		<result property="dictName"   column="dict_name"   />
		<result property="dictCode"   column="dict_code"   />
		<result property="stopFlag"     column="stop_flag"      />
		<result property="dictType"   column="dict_type"   />
		<result property="remark" column="remark" />
		<result property="viewIndex"   column="view_index"   />
		<result property="subDictCode"   column="sub_dict_code"   />
		<result property="subDictTable"   column="sub_dict_table"   />
		<result property="subDictCol"   column="sub_dict_col"   />
	</resultMap>
	
	<sql id="selectDictTypeVo">
        select id, dict_name, dict_code, stop_flag, dict_type, remark, view_index, sub_dict_code, sub_dict_table, sub_dict_col
		from sys_data_dict_type
    </sql>

	<select id="selectDictTypeList" parameterType="SysDataDictType" resultMap="SysDictTypeResult">
		select a.id, a.dict_name, a.dict_code, a.stop_flag, a.dict_type, a.remark, a.view_index, a.sub_dict_code,
		       a.sub_dict_table, a.sub_dict_col
		from sys_data_dict_type a
		left join sys_data_dict b
		on a.dict_code = b.dict_type
		<where>
		    <if test="dictName != null and dictName != ''">
				AND a.dict_name like concat('%', #{dictName}, '%')
			</if>
			<if test="stopFlag != null and stopFlag != ''">
				AND a.stop_flag = #{stopFlag}
			</if>
			<if test="dictCode != null and dictCode != ''">
				AND a.dict_code like concat('%', #{dictCode}, '%')
			</if>
			<if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
				and date_format(b.enable_date,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
			</if>
			<if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
				and date_format(b.expire_date,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
			</if>
	    </where>
	</select>
	
	<select id="selectDictTypeAll" resultMap="SysDictTypeResult">
		<include refid="selectDictTypeVo"/>
	</select>
	
	<select id="selectDictTypeById" parameterType="Long" resultMap="SysDictTypeResult">
		<include refid="selectDictTypeVo"/>
		where id = #{id}
	</select>
	
	<select id="selectDictTypeByType" parameterType="String" resultMap="SysDictTypeResult">
		<include refid="selectDictTypeVo"/>
		where dict_code = #{dictCode}
	</select>
	
	<select id="checkDictTypeUnique" parameterType="String" resultMap="SysDictTypeResult">
		<include refid="selectDictTypeVo"/>
		where dict_code = #{dictCode} limit 1
	</select>
	
	<delete id="deleteDictTypeById" parameterType="Long">
 		delete from sys_data_dict_type where id = #{id}
 	</delete>
 	
 	<delete id="deleteDictTypeByIds" parameterType="Long">
 		delete from sys_data_dict_type where id in
 		<foreach collection="array" item="id" open="(" separator="," close=")">
 			#{id}
        </foreach> 
 	</delete>

 	<update id="updateDictType" parameterType="SysDataDictType">
 		update sys_data_dict_type
 		<set>
 			<if test="dictName != null and dictName != ''">dict_name = #{dictName},</if>
 			<if test="dictCode != null and dictCode != ''">dict_code = #{dictCode},</if>
 			<if test="stopFlag != null">stop_flag = #{stopFlag},</if>
 			<if test="remark != null">remark = #{remark}</if>
 		</set>
 		where id = #{id}
	</update>
 	
 	<insert id="insertDictType" parameterType="SysDataDictType">
 		insert into sys_data_dict_type(
 			<if test="dictName != null and dictName != ''">dict_name,</if>
 			<if test="dictCode != null and dictCode != ''">dict_code,</if>
 			<if test="stopFlag != null">stop_flag,</if>
 			<if test="remark != null and remark != ''">remark,</if>
 		)values(
 			<if test="dictName != null and dictName != ''">#{dictName},</if>
 			<if test="dictCode != null and dictCode != ''">#{dictCode},</if>
 			<if test="stopFlag != null">#{stopFlag},</if>
 			<if test="remark != null and remark != ''">#{remark},</if>
 		)
	</insert>
	
</mapper> 