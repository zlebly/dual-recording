<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.georsoft.business.mapper.ProductInfoMapper">

    <resultMap type="com.georsoft.business.entity.PO.DataDictPO" id="ProductInfoResult">
        <id     property="id"      column="ID"      />
        <result property="dictType"    column="DICT_TYPE"    />
        <result property="dictCode"     column="DICT_CODE"     />
        <result property="dictName"   column="DICT_NAME"   />
        <result property="viewIndex"    column="VIEW_INDEX"    />
        <result property="remark"      column="REMARK"      />
        <result property="stopFlag"      column="STOP_FLAG"      />
        <result property="enableDate"     column="ENABLE_DATE"      />
        <result property="expireDate"     column="EXPIRE_DATE"      />
        <result property="relDictCode"     column="REL_DICT_CODE"      />
    </resultMap>

    <!-- 查询产品列表 -->
    <select id="selectProductInfoList" parameterType="com.georsoft.business.entity.DTO.QryProductInfoDTO" resultMap="ProductInfoResult">
        SELECT
            a.id,
            a.DICT_TYPE,
            a.DICT_CODE,
            a.DICT_NAME,
            a.VIEW_INDEX,
            a.REMARK,
            a.ENABLE_DATE,
            a.EXPIRE_DATE,
            a.STOP_FLAG,
            a.REL_DICT_CODE
        FROM
            sys_data_dict a
                LEFT JOIN sys_data_dict_type b ON a.DICT_TYPE = b.DICT_CODE
        WHERE
            b.DICT_NAME = '有效证件种类';
    </select>

    <insert id="addProductInfo" parameterType="com.georsoft.business.entity.PO.ProductInfoPO">
        insert into fcm_product_info(id, product_name, product_type, des, create_date, product_id,
                                     risk_tips, create_user_id)
        values(#{id}, #{productName}, #{productType}, #{des}, #{createDate}, #{productId},
               #{riskTips}, #{createUserId})
    </insert>

    <insert id="batchAddProductInfos" parameterType="java.util.List">
        insert into fcm_product_info(id, product_name, product_type, des, create_date, product_id,
                                     risk_tips, create_user_id)
        values
            <foreach collection="list" item="item" separator="," index="index">
                (#{item.id}, #{item.productName}, #{item.productType}, #{item.des}, #{item.createDate}, #{item.productId},
                #{item.riskTips}, #{item.createUserId})
            </foreach>
    </insert>

    <update id="updateProductInfo" parameterType="com.georsoft.business.entity.PO.ProductInfoPO">
        update fcm_product_info
        <set>
            <if test="productName !=null and productName != ''">
                product_name = #{productName},
            </if>
            <if test="productType !=null and productType != ''">
                product_type = #{productType},
            </if>
            <if test="productId !=null and productId != ''">
                product_id = #{productId},
            </if>
            <if test="riskTips != null and riskTips != ''">
                risk_tips = #{riskTips},
            </if>
        </set>
        <where>
            <if test="id !=null and id != ''">
                id = #{id}
            </if>
        </where>
    </update>

    <delete id="deleteProductInfo" parameterType="java.lang.String">
        delete from fcm_product_info where id = #{id}
    </delete>
</mapper>